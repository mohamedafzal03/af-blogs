<link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
<style>
  .field{
    padding:1rem 0rem 0rem 0rem;
  }
  .ql-picker-label{
    font-size:1rem;
  }
  .ql-editor{
    font-size:1rem;
    width: 52rem;
    height: 22rem;
  }
</style>
<div class="input-group field">
    <input class="form-control form-control-lg border border-white" type="text" placeholder="Title" name="title" id="title" value="<%= article.title %>">
</div>
<div class="input-group field">
    <textarea class="form-control form-control-lg border border-white" placeholder="description" aria-label="With textarea" name="description" id="description"><%= article.description %></textarea>
</div>
<br>
<div class="input-group " style="min-height: 300px;overflow: scroll; display: none">
  <textarea class="form-control border border-white" placeholder="write your Content here .." aria-label="With textarea" name="markdown" id="markdown"><%= article.markdown %></textarea>
</div>
<div id="editor" class="input-group field" style="min-height: 300px;overflow: scroll">
  <% if(!article.markdown){ %>
    <p>enter your thoughts</p>
  <% } else{ %>  
    <%- article.markdown %>
  <% } %>
</div>
<div style="padding: 1rem 0rem 0.5rem 0rem;">
<a href="/articles" style="color: #ffffffff;">
    <button type="button" class="btn btn-outline-dark">cancel</button>
</a>
<button onclick="submitPost()"class="btn btn-outline-dark">Save</button>
</div>
<script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
<script>
var quill = new Quill('#editor', {
  modules: {
    toolbar: [
        [{ 'font': [] }], 
      [{ header: [1, 2, false] }],
      ['bold', 'italic', 'underline','link'],
      ['image', 'code-block'],
      [{ 'list': 'ordered'}, { 'list': 'bullet' }], 
      [{ 'align': [] }]   
    ]
  },
  placeholder: 'Compose an epic...',
  theme: 'snow'  // or 'bubble'
});
function submitPost(){
  document.querySelector("#markdown").value = document.querySelector(".ql-editor").innerHTML;
}
</script>
